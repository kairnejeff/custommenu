{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block contact_form %}
    {{ form_start(Form) }}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">{{ icon }}</i>
            {{ name|trans({}, 'Modules.Demodoctrine.Admin') }}
        </h3>
        <div class="card-block row">
            <div class="card-text">
                {{ form_errors(Form) }}

                {% block item_form_rest %}
                    {{ form_rest(Form) }}
                {% endblock %}
            </div>
        </div>
        <div class="card-footer">
            <a href="{{ path('kj_custommenu_item_index') }}" class="btn btn-outline-secondary">
                {{ 'Cancel'|trans({}, 'Admin.Actions') }}
            </a>
            <button class="btn btn-primary float-right">
                {{ 'Save'|trans({}, 'Admin.Actions') }}
            </button>
        </div>
    </div>
    {{ form_end(Form) }}
{% endblock %}
